<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_16sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choose_bike_background_gradient"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp">

        <ImageView
            android:id="@+id/bike_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/_16sdp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/bike_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pc_variant_card_left_margin"
            android:fontFamily="@font/guardiansans_semibold"
            android:textColor="@color/white"
            android:textSize="@dimen/_28ssp" />

        <TextView
            android:id="@+id/bike_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pc_variant_card_left_margin"
            android:layout_marginEnd="@dimen/pc_variant_card_left_margin"
            android:textColor="@color/pc_more_detail_title_color"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:id="@+id/show_more_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pc_variant_card_left_margin"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/from_u20b9_2_00_000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/ex_showroom_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pc_variant_card_left_margin"
                    android:text="@string/ex_showroom_price"
                    android:textColor="@color/pc_more_detail_title_color"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/change_city_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/city"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/pc_variant_card_left_margin"
                        android:text="fdfdfdfdfdfdfdfdfdfdfdfdfdfdfdf"
                        android:textColor="@color/pc_more_detail_title_color"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:text="@string/change"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/pc_bike_variant_color"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
            <Button
                android:id="@+id/config_now"
                android:layout_width="132dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:background="@color/black"
                android:gravity="center"
                android:text="@string/configure_now"
                android:textAllCaps="false"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/book_now"
                android:visibility="visible"
                android:layout_width="132dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:background="@color/black"
                android:gravity="center"
                android:text="@string/book_a_motorcycle"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white" />
            </RelativeLayout>
            <TextView
                android:id="@+id/configurator_comming_soon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pc_variant_card_left_margin"
                android:fontFamily="@font/montserrat_semibold_italic"
                android:text="@string/config_comming_soon"
                android:layout_below="@+id/show_more_detail"
                android:layout_alignParentLeft="true"
                android:textColor="@color/pc_more_detail_title_color"
                android:textSize="12sp"  />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>


