<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/black_two">

    <com.royalenfield.reprime.ui.onboarding.login.views.LoginBannerLayout
            android:id="@+id/login_top_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_h_0">

    </com.royalenfield.reprime.ui.onboarding.login.views.LoginBannerLayout>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline251"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"/>


    <com.royalenfield.reprime.base.viewpager.REViewPager
            android:id="@+id/view_pager_splash_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/view_pager_sign_up_margin_bottom"
            android:layout_marginTop="@dimen/view_pager_sign_up_margin_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_pagerindicator_one"/>

    <View
            android:id="@+id/view_pagerindicator_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_indicator_height"
            android:layout_marginEnd="@dimen/pager_indicator_margin_end"
            android:layout_marginTop="@dimen/pager_indicator_margin_top"
            android:background="@color/white"
        app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toStartOf="@+id/view_pagerindicator_two"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <View
            android:id="@+id/view_pagerindicator_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_indicator_height"
            android:layout_marginStart="@dimen/pager_indicator_margin_end"
        android:layout_marginEnd="2dp"
            android:layout_marginTop="@dimen/pager_indicator_margin_top"
            android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/view_pagerindicator_one"
        app:layout_constraintEnd_toStartOf="@+id/view_pagerindicator_three"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_pagerindicator_three"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_indicator_height"
        android:layout_marginStart="@dimen/pager_indicator_margin_end"
        android:layout_marginTop="@dimen/pager_indicator_margin_top"
        android:background="@color/white"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/view_pagerindicator_two"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.115"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"/>

    <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/skip_text_margin_top"
            android:fontFamily="@font/montserrat_regular"
            android:lineSpacingExtra="2sp"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="@dimen/skip_text_size"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/guideline_v_95"
            app:layout_constraintTop_toBottomOf="@id/guideline_h_10"/>


</androidx.constraintlayout.widget.ConstraintLayout>