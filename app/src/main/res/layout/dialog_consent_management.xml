<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size_20"
        android:background="@drawable/dialog_rounded_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_30">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/guardiansans_semibold"
            android:gravity="center"
            android:text="@string/authorize_our_application"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginBottom="@dimen/size_40"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/instructions_for_motorcycle_settings"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_15"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/connection_settings"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:id="@+id/llLocationAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:letterSpacing="-0.04"
                android:text="@string/location_access"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <Switch
                android:id="@+id/switchToggleLocation"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="end"
                android:checked="true"
                android:thumb="@drawable/custom_thumb"
                android:track="@drawable/custom_track" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30"
            android:layout_marginBottom="@dimen/size_15"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/notification_settings"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:letterSpacing="-0.04"
                android:text="@string/motorcycle_notifications"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <Switch
                android:id="@+id/switchToggleNotification"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="end"
                android:checked="true"
                android:thumb="@drawable/custom_thumb"
                android:track="@drawable/custom_track" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="horizontal">
        <CheckBox
            android:id="@+id/privacypolicy_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@color/white"
            android:gravity="top"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="@dimen/signup_privacypolicy_textsize"/>

        <TextView
            android:id="@+id/privacypolicy_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:maxLines="6"
            android:text=""
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:paddingRight="@dimen/signup_terms_padding"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorLink="@color/white"
            android:textSize="@dimen/signup_privacypolicy_textsize" />
        </LinearLayout>
        <Button
            android:id="@+id/txtConfirm"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_50"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/confirm"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="@color/text_enable_disable_color" />


    </LinearLayout>
</LinearLayout>