<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/choose_bike_background_gradient"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    tools:ignore="RtlSymmetry">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_8"
        >
        <ImageView
            android:id="@+id/bike_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/pc_variant_card_left_margin"
            android:src="@drawable/ic_share"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="@dimen/_10sdp"
            android:focusable="true"
            android:contentDescription="@string/share" />
        <ImageView
            android:id="@+id/delete"
            android:layout_below="@+id/share"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:layout_marginStart="@dimen/pc_variant_card_left_margin"
            android:src="@drawable/ic_delete_config"
            android:clickable="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:focusable="true"
            android:contentDescription="@string/share"
            />
    </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="vertical"
    android:paddingStart="@dimen/dp_16">

    <TextView
        android:id="@+id/bike_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pc_variant_card_left_margin"
        android:layout_marginEnd="@dimen/pc_variant_card_left_margin"
        android:fontFamily="@font/guardiansans_semibold"
        android:textColor="@color/white"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/bike_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pc_variant_card_left_margin"
        android:textColor="@color/pc_more_detail_title_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/show_more_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pc_variant_card_left_margin"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/total_price"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ex_showroom_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pc_variant_card_left_margin"
                android:text="@string/ex_showroom_price"
                android:textColor="@color/pc_more_detail_title_color"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/config_now"
            android:layout_width="146dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/open"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>

</LinearLayout>


