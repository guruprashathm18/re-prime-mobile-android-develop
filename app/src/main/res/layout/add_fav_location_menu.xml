<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_two"
    >
    <TextView
        android:id="@+id/tv_rename_fav_address"
        android:layout_marginLeft="8dp"
        android:text="Rename"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ActionItem"
        />

    <View
        android:id="@+id/renameView"
        android:layout_margin="5dp"
        android:background="@color/white_50"
        app:layout_constraintTop_toBottomOf="@+id/tv_rename_fav_address"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_edit_fav_address"
        android:text="Edit"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rename_fav_address"
        style="@style/ActionItem"
        />
    <View
        android:layout_margin="5dp"
        android:background="@color/white_50"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_fav_address"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_edit_del_address"
        android:text="Delete"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_fav_address"
        style="@style/ActionItem"
        />
