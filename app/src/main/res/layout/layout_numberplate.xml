<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/numberplate_border"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/iv_close_profile"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/numberplate_topbar"/>

        <TextView
                android:id="@+id/tv_vehicle_registration_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="KA 01 HX 1043"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/white_blue"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_close_profile"/>

        <ImageView
                android:id="@+id/iv_edit_profile"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_registration_no"
                app:layout_constraintVertical_bias="0.060000002"
                app:srcCompat="@drawable/numberplate_bottombar"/>

        <View
                android:id="@+id/view4"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/numberplate_view_white_cornered"
                app:layout_constraintBottom_toBottomOf="@+id/iv_close_profile"
                app:layout_constraintEnd_toStartOf="@+id/guideline12"
                app:layout_constraintStart_toStartOf="@+id/iv_close_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_close_profile"/>

        <View
                android:id="@+id/view5"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/numberplate_view_white_cornered"
                app:layout_constraintBottom_toBottomOf="@+id/iv_close_profile"
                app:layout_constraintEnd_toEndOf="@+id/iv_close_profile"
                app:layout_constraintStart_toStartOf="@+id/guideline12"
                app:layout_constraintTop_toTopOf="@+id/iv_close_profile"/>

        <View
                android:id="@+id/view6"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/numberplate_view_white_cornered"
                app:layout_constraintBottom_toBottomOf="@+id/iv_edit_profile"
                app:layout_constraintEnd_toStartOf="@+id/guideline12"
                app:layout_constraintStart_toStartOf="@+id/iv_edit_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_edit_profile"/>

        <View
                android:id="@+id/view7"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:background="@drawable/numberplate_view_white_cornered"
                app:layout_constraintBottom_toBottomOf="@+id/iv_edit_profile"
                app:layout_constraintEnd_toEndOf="@+id/iv_edit_profile"
                app:layout_constraintStart_toStartOf="@+id/guideline12"
                app:layout_constraintTop_toTopOf="@+id/iv_edit_profile"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>