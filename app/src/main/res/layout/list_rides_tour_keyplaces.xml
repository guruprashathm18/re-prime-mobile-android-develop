<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:background="@color/black_two"
        android:paddingBottom="14dp"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/place_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_editor_absoluteY="15dp"
            android:visibility="gone"
            android:background="@drawable/news1"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="15dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/text_key_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Rider Name"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/textview_reschedule_size"
            android:lineSpacingExtra="5sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="@id/rider_image"
            app:layout_constraintHorizontal_bias="0.0"
            tools:ignore="MissingConstraints,NotSibling"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
