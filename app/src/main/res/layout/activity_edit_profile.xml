<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_two">

            <com.royalenfield.reprime.ui.custom.views.TitleBarView
                android:id="@+id/tb_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/guideline11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/re_actionbar_height"/>

            <FrameLayout
                android:id="@+id/frame_image"
                android:layout_width="0dp"
                android:layout_height="195dp"
                android:foreground="@drawable/foreground_profile_image"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.812"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tb_edit_profile">

                <ImageView
                    android:id="@+id/imageView_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_image_loading"
                    android:contentDescription="@string/bike_image"/>

            </FrameLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.10"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="250dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v_94"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9472"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_h_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1.0"/>

            <TextView
                android:id="@+id/tv_edit_profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="3dp"
                android:text="@string/edit_profile_photo"
                android:textColor="@color/very_light_pink"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v_94"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintStart_toStartOf="@+id/guideline_v_5"
                app:layout_constraintTop_toBottomOf="@+id/frame_image"/>

            <View
                android:id="@+id/separator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:visibility="visible"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_72"
                app:layout_constraintTop_toBottomOf="@id/tv_edit_profile_photo"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.727"/>

            <TextView
                android:id="@+id/rider_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:lineSpacingExtra="2sp"
                android:paddingLeft="3dp"
                android:text="@string/rider_profile_text"
                android:textColor="@color/white_50"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v_94"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintStart_toStartOf="@+id/guideline_v_5"
                app:layout_constraintTop_toBottomOf="@+id/separator"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/first_name"
                android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:cursorVisible="false"
                android:theme="@style/editprofile_edittext"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@+id/rider_profile_text"/>

            <TextView
                android:id="@+id/first_name_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="0dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/last_name"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/first_name"/>


            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/last_name"
                android:inputType="text"
                android:cursorVisible="false"
                android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:theme="@style/editprofile_edittext"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/first_name"/>

            <TextView
                android:id="@+id/last_name_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="0dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/last_name"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/email_id"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:cursorVisible="false"
                android:theme="@style/editprofile_edittext"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/last_name"/>

            <TextView
                android:id="@+id/email_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="0dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/ph_number"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/email"/>

            <EditText
                android:id="@+id/ph_number"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/ph_number"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:cursorVisible="false"
                android:theme="@style/editprofile_edittext"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/email"/>

            <TextView
                android:id="@+id/phone_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="0dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/dob"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintTop_toBottomOf="@id/ph_number"/>

            <EditText
                android:id="@+id/dob"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:theme="@style/editprofile_edittext"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/dob"
                android:digits="0123456789/"
                android:inputType="date"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="@dimen/signup_edtxt_textsize"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@+id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/ph_number"/>

            <ImageView
                android:id="@+id/calendar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@string/calendar"
                android:src="@drawable/calendar"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/dob"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toTopOf="@id/dob"/>

            <TextView
                android:id="@+id/dob_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="0dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/city"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/dob"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/city"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:cursorVisible="false"
                android:theme="@style/editprofile_edittext"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/dob"/>

            <TextView
                android:id="@+id/city_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="0dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/rider_description"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/city"/>

            <EditText
                android:id="@+id/rider_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:hint="About You..."
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:cursorVisible="false"
                android:theme="@style/editprofile_edittext"
                android:visibility="visible"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/city"/>

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="3"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:textSize="18sp"
                android:theme="@style/editprofile_edittext"
                android:visibility="visible"
                android:cursorVisible="false"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/rider_description"/>

            <TextView
                android:id="@+id/password_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:paddingTop="1dp"
                android:textColor="@color/orangey_red"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@id/edit_password"/>

            <LinearLayout
                android:id="@+id/parent_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                app:layout_constraintBottom_toTopOf="@id/add_new_address"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintRight_toLeftOf="@id/guideline_v_94"
                app:layout_constraintTop_toBottomOf="@+id/password_error_message">

            </LinearLayout>


            <TextView
                android:id="@+id/add_new_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="-2sp"
                android:paddingStart="3dp"
                android:paddingEnd="0dp"
                android:text="@string/add_new_address"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintTop_toBottomOf="@id/parent_linear_layout"/>

            <Button
                android:id="@+id/button_saveprofile"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/button_border_enable"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/save_profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/guideline_h_100"
                app:layout_constraintLeft_toRightOf="@id/guideline_v_5"
                app:layout_constraintTop_toBottomOf="@id/add_new_address"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>