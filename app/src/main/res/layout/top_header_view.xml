<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:paddingStart="@dimen/dp_24"
    android:paddingTop="40dp"
    android:paddingEnd="@dimen/dp_16">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/back_2" />

    <TextView
        android:id="@+id/txv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/guardiansans_semibold"
        android:text="@string/trip_analysis"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/delete_icon"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/merge_trips"
        android:enabled="false"
android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:fontFamily="@font/guardiansans_regular"
        android:background="@drawable/ract_corner_white_5_corner"
        android:textColor="@color/text_enable_disable_color"
        tools:visibility="gone" />


</RelativeLayout>
