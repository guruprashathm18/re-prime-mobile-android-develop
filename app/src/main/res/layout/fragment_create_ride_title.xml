<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_two"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/tv_add_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/add_description"
        android:textColor="@color/white_50"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline78"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline77"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/your_ride_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/montserrat_light"
        android:gravity="start"
        android:hint="@string/hint_your_ride_title"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:paddingStart="14dp"
        android:paddingTop="13dp"
        android:paddingEnd="15dp"
        android:paddingBottom="13dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline78"
        app:layout_constraintStart_toStartOf="@+id/guideline77"
        app:layout_constraintTop_toBottomOf="@id/tv_add_description" />

    <EditText
        android:id="@+id/your_ride_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:fontFamily="@font/montserrat_light"
        android:gravity="start"
        android:hint="@string/hint_your_ride_description"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:minHeight="111dp"
        android:paddingStart="14dp"
        android:paddingTop="16dp"
        android:paddingEnd="15dp"
        android:paddingBottom="13dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline78"
        app:layout_constraintStart_toStartOf="@+id/guideline77"
        app:layout_constraintTop_toBottomOf="@id/your_ride_title" />

    <View
        android:id="@+id/description_separator"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/white_50"
        app:layout_constraintEnd_toEndOf="@+id/guideline78"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline77"
        app:layout_constraintTop_toBottomOf="@id/your_ride_description" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
