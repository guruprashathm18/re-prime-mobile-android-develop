<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp"
    android:background="@drawable/choose_bike_background_gradient"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bike_img"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp" />
    <TextView
        android:id="@+id/bike_model"
        android:text="@string/bike_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:fontFamily="@font/guardiansans_semibold"
        android:layout_marginLeft="@dimen/dp_32"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_32"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/bike_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/dp_32"
        android:textColor="@color/pc_more_detail_title_color"
        android:layout_marginStart="@dimen/dp_32"
        tools:ignore="RtlHardcoded" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/show_more_detail"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:gravity="center"
            android:focusable="true"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/more_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_32"
                android:fontFamily="@font/guardiansans_semibold"
                android:text="@string/more_details"
                android:textColor="@color/pc_more_detail_title_color"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/up_down_img"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/see_variant"
            android:layout_alignParentEnd="true"
            android:layout_width="146dp"
            android:layout_height="34dp"
            android:background="@color/black"
            android:textAllCaps="false"
            android:text="@string/see_variant"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/more_detail_rl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/engine_capacity_tl"
            android:text="@string/engine_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/guardiansans_semibold"
            android:layout_marginLeft="@dimen/dp_32"
            android:textColor="@color/pc_more_detail_title_color"
            android:layout_marginStart="@dimen/dp_32"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/engine_capacity"
            android:layout_below="@id/engine_capacity_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/pc_more_detail_title_color"
            android:layout_marginStart="@dimen/dp_32" />
        <TextView
            android:id="@+id/power_tl"
            android:layout_toRightOf="@+id/engine_capacity_tl"
            android:text="@string/power"
            android:fontFamily="@font/guardiansans_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/pc_more_detail_title_color"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_toEndOf="@+id/engine_capacity_tl"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/power"
            android:layout_toRightOf="@id/engine_capacity_tl"
            android:layout_below="@id/power_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/pc_more_detail_title_color"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_toEndOf="@id/engine_capacity_tl"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/torque_tl"
            android:layout_below="@id/engine_capacity"
            android:text="@string/torque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/guardiansans_semibold"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/pc_more_detail_title_color"
            android:layout_marginStart="@dimen/dp_32"
            />
        <TextView
            android:id="@+id/torque"
            android:layout_below="@id/torque_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/pc_more_detail_title_color"
            android:layout_marginStart="@dimen/dp_32"
            />
    </RelativeLayout>

</LinearLayout>