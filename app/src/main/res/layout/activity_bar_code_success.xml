<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_two"

    android:orientation="vertical">

    <include
        android:id="@+id/ll_header"
        layout="@layout/layout_header_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/ic_tick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_header"></ImageView>
    <TextView
        android:fontFamily="@font/guardiansans_semibold"
        android:id="@+id/lbl_genuine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Your Product is Genuine"></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/lbl_part_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_genuine"
        android:text="Name:"></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/txt_part_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lbl_part_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_genuine"
        tools:text=""></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/lbl_part_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_part_name"
        android:text="Part Code:"></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/txt_part_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toRightOf="@+id/lbl_part_code"
        app:layout_constraintTop_toBottomOf="@+id/txt_part_name"
        tools:text=""></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/lbl_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_part_code"
        android:text="MRP:"></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@+id/lbl_price"
        app:layout_constraintTop_toBottomOf="@+id/lbl_part_code"
        tools:text=""></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/lbl_dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_price"
        android:text="Sold By:"></TextView>

    <TextView
        android:fontFamily="@font/guardiansans_regular"
        android:id="@+id/txt_dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@+id/lbl_dealer"
        app:layout_constraintTop_toBottomOf="@+id/lbl_price"
        tools:text=""></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>