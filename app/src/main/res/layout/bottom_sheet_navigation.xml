<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_layout"
    tools:context="com.royalenfield.reprime.ui.home.navigation.fragment.NavigationFilterScreen">

    <TextView
        android:id="@+id/tvRouteSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/nav_filter_title"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_change_unit" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_30"
        android:id="@+id/view2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRouteSettings"
        app:layout_constraintEnd_toStartOf="@+id/guideline88"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp" />

    <ImageView
        android:id="@+id/cross_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_cross"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/guideline88"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/tvRouteSettings"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/livetraffic"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_traffic"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:visibility="gone"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        app:track="@null"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/highway"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_highway"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        app:track="@null"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginEnd="22dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/tolls"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_toll"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        app:track="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highway"
        android:layout_marginEnd="22dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/ferry"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_ferry"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        app:track="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tolls"
        android:layout_marginEnd="22dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/nightmode"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_nightmode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        app:track="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ferry"
        android:layout_marginEnd="22dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_eta_distance"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_eta_distance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        android:maxLines="2"
        app:track="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nightmode"
        android:layout_marginEnd="22dp" />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_enable_call_notification"
        style="@style/ActionItem"
        android:layout_height="wrap_content"
        android:checked="false"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/nav_filter_call_notification"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:button="@drawable/custom_switch_selector"
        android:thumb="@null"
        android:layoutDirection="rtl"
        android:maxLines="2"
        app:track="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_eta_distance"
        android:layout_marginEnd="22dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:text="@string/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        android:drawableRight="@drawable/share"
        android:drawablePadding="15dp"
        android:textSize="18sp"
        android:visibility="visible"
        android:id="@+id/textView_share"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline88"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView_change_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_filter_changeunit"
        android:layout_marginStart="28dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_share" />
</androidx.constraintlayout.widget.ConstraintLayout>
