<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/alert_dialog_bg_color">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#1f1f1f"
        app:cardCornerRadius="10dp"
        app:strokeColor="#444444"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alert_dialog_bg_color">

            <TextView
                android:id="@+id/re_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_16"
                android:fontFamily="@font/guardiansans_semibold"
                android:gravity="center"
                android:text="Error"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_16"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Sorry, Please retry."
                android:textColor="@color/white"
                android:textSize="12sp" />


            <Button
                android:id="@+id/okay"
                android:layout_width="140dp"
                android:layout_height="34dp"
                android:layout_below="@+id/message"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#000000"
                android:fontFamily="@font/montserrat_bold"
                android:text="Ok"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/dp_16"
                android:textColor="@color/alert_list_count_color" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>