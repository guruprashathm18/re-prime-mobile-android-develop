<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
                    <solid android:color="@color/black_bg" />
                    <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
                    <solid android:color="@color/black_bg" />
                    <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>