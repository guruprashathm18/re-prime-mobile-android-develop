<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="@color/color_progress_back"
                    android:centerColor="@color/color_progress_back"
                    android:centerY="0.75"
                    android:endColor="@color/color_progress_back"
                    android:angle="270"
            />
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                        android:radius="5dip" />
                <gradient
                        android:startColor="@color/color_progress_status"
                        android:endColor="@color/color_progress_status"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>