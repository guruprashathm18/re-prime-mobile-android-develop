<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OnBoardEditTextStyle" parent="android:Widget.EditText">
        <item name="android:lineSpacingExtra">-7sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:background">@drawable/shape_global_white_border_for_edit_text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/dots_margin_left</item>

    </style>

    <!-- Common button style applied for the all Edit Text field -->
    <style name="REEditTextStyle" parent="android:Widget.EditText">
        <item name="android:lineSpacingExtra">-7sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:background">@drawable/shape_global_white_border_button</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:singleLine">true</item>

    </style>

    <!-- Common button style applied for the all buttons -->
    <style name="REButtonStyle" parent="android:Widget.Button">
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:background">@drawable/shape_global_white_border_button</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white_30</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>

    </style>

    <style name="CalendarDateStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CalendarDateStyle.Highlighted" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>